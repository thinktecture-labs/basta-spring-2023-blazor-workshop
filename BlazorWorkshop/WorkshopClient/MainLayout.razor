@inherits LayoutComponentBase
<MudThemeProvider Theme="DefaultTheme" />

<MudLayout>
    <MudAppBar>
        <MudIconButton Icon="@Icons.Material.Filled.Menu" OnClick="ToggleDrawer"></MudIconButton>
        <MudText Typo="Typo.h6">BASTA! 2023 Spring Blazor ROCKS</MudText>
        <MudSpacer />
        <LoginDisplay></LoginDisplay>
    </MudAppBar>
    <MudDrawer @bind-Open="@_showDrawer" ClipMode="DrawerClipMode.Docked">

        <AuthorizeView>
            <Authorized>
                <MudNavMenu>
                    <MudNavLink Href="/" Icon="@Icons.Material.Filled.Dashboard" Match="NavLinkMatch.All" IconColor="Color.Secondary">Dashboard</MudNavLink>
                    <MudNavLink Href="/conferences" Icon="@Icons.Material.Filled.List" Match="NavLinkMatch.All" IconColor="Color.Secondary">Conferences</MudNavLink>
                </MudNavMenu>
            </Authorized>
        </AuthorizeView>
    </MudDrawer>
    <MudMainContent>
        <MudContainer Class="py-4" MaxWidth="MaxWidth.Large">
            @Body
        </MudContainer>
    </MudMainContent>
</MudLayout>


